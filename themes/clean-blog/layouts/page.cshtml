@{
    Layout = "default";
}

<!-- Page Header -->
<header class="intro-header" style="background-image: url('/img/about-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>@Title</h1>
                    <hr class="small">
                    <span class="subheading">@Description</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Page Content -->
<div class="container">
    @RenderBody()
</div>